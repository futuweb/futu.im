// Header
// --------------------------------------------------
.header { 
  background: linear-gradient(0deg,white, #041f3a); 
  
}

.header-inner {
  padding: 25px 0 20px;
  clearfix();

  +mobile() {
    width: auto;
    margin-bottom: 50px;
    padding: 10px;
  }
}

.site-meta {
    text-align: center;
    margin:0 auto;

  +mobile() {
    margin-left: 10px;
    float:left;

  }

  .brand {
    padding: 2px 1px;
    background: none;
    color:#fff;

    +mobile() { display: block; }
  }

  .logo { display: none; }

  .site-title {
    font-size: 26px;
    padding:20px 0;

    +mobile() { line-height: 34px;     padding:0;}
  }
}


.logo-line-before,
.logo-line-after {
  display: block;
  overflow: hidden;
  margin: 0 auto;
  width: 75%;

  +mobile() { display: none; }

  i {
    position: relative;
    display: block;
    height: 2px;
    background: $black-deep;
    +mobile() { height: 3px; }
  }
}

.use-motion {
  .logo-line-before i { left: -100%; }
  .logo-line-after i { right: -100%; }
}
